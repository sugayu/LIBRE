<div class="mt-5 col-10 mx-auto" style="width: 100%;">
  <h1><i class="fa fa-book" aria-hidden="true"></i><%= @book.book_title %>の話一覧</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>話数</th>
        <th>話名</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% count = 1 %>
      <% @episodes.each do |epi| %>
      <tr>
        <td>第<%= count %>話</td>
        <td>
          <%= link_to book_episode_path(@book, epi) do %>
          <div style="color: black;"><%= epi.epi_title %></div>
          <% end %>
        </td>
        <td>
          <%= link_to edit_book_episode_path(@book, epi) do %>
          <button type="button" class="btn btn-success">話の編集</button>
          <% end %>
        </td>
        <td>
          <%= link_to book_episode_path(@book, epi), method: :delete do %>
          <button type="button" class="btn btn-danger">話の削除</button>
          <% end %>
        </td>
      </tr>
      <% count += 1 %>
      <% end %>
    </tbody>
  </table>
  <%= link_to new_book_episode_path(@book) do %>
  <button type="button" class="btn btn-success">話を追加</button>
  <% end %>
</div>