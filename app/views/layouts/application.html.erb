<!DOCTYPE html>
<html>
<head>
  <title>LIBRE</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <% if user_signed_in? %>
  <!-- ユーザーログイン時 header -->
  <nav class="navbar navbar-expand-lg" style="height: 60px; background-color: #3F51B5;">
    <a class="navbar-brand text-color" href="#">LIBRE</a>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-md-auto">
        <li class="nav-item">
          <%= link_to destroy_user_session_path, method: :delete, class:"nav-link mx-2"  do %>
          <i class="fas fa-sign-out-alt"></i> Sign Out
          <% end %>
        </li>        
        <li class="nav-item">
          <a class="nav-link text-color" href="#">Book Search</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-color" href="#">Author Search</a>
        </li>
      </ul>
    </div>
  </nav>
  <% elsif admin_signed_in? %>
  <!-- 管理者ログイン時 header -->
  <nav class="navbar navbar-expand-lg" style="height: 60px; background-color: #3F51B5;">
    <a class="navbar-brand text-color" href="#">LIBRE</a>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-md-auto">
        <li class="nav-item">
          <%= link_to destroy_admin_session_path, method: :delete, class:"nav-link mx-2"  do %>
          <i class="fas fa-sign-out-alt"></i> Sign Out
          <% end %>
        </li>        
        <li class="nav-item">
          <a class="nav-link text-color" href="#">Book Search</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-color" href="#">Author Search</a>
        </li>
      </ul>
    </div>
  </nav>
  <% else %>

  <!-- ユーザーログアウト時ヘッダー（ゲスト） -->
  <nav class="navbar navbar-expand-lg" style="height: 60px; background-color: #3F51B5;">
    <a class="navbar-brand text-color" href="#">LIBRE</a>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-md-auto">
        <li class="nav-item">
          <a class="nav-link text-color" href="#">Book</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-color" href="#">Genre</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-color" href="#">Signup</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-color" href="#">login</a>
        </li>        
        <li class="nav-item">
          <a class="nav-link text-color" href="#">Book Search</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-color" href="#">Author Search</a>
        </li>
      </ul>
    </div>
  </nav>
  <% end %>

  <%= yield %>
</body>
</html>
